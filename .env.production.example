# ==============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
# This file contains example configuration for production deployment
# Copy to .env.production and customize for your production setup

# ==============================================================================
# SUPABASE CONFIGURATION (PRODUCTION)
# ==============================================================================
# Your production Supabase project credentials
VITE_SUPABASE_URL=https://your-prod-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-production-key
VITE_SUPABASE_PROJECT_ID=your-production-project-id

# ==============================================================================
# APPLICATION CONFIGURATION (PRODUCTION)
# ==============================================================================
NODE_ENV=production
VITE_APP_URL=https://your-domain.com

# ==============================================================================
# FEATURE FLAGS (PRODUCTION)
# ==============================================================================
# Configure features for production use
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_WEB_BUILDER=true
VITE_ENABLE_DESIGN_STUDIO=true
VITE_ENABLE_CODE_EDITOR=true
VITE_ENABLE_ANALYTICS=true

# ==============================================================================
# PRODUCTION SETTINGS
# ==============================================================================
# Disable development tools in production
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_CONSOLE_LOGGING=false
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ==============================================================================
# API CONFIGURATION (PRODUCTION)
# ==============================================================================
VITE_API_TIMEOUT=15000

# ==============================================================================
# SECURITY (PRODUCTION)
# ==============================================================================
# Strict CORS settings for production
VITE_CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
VITE_CSP_ENABLED=true

# ==============================================================================
# THIRD-PARTY INTEGRATIONS (PRODUCTION)
# ==============================================================================
# Production API keys and tracking
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================================================
# AI INTEGRATIONS (PRODUCTION)
# ==============================================================================
# Production AI API keys
VITE_LOVABLE_API_KEY=your-production-lovable-key
VITE_OPENAI_API_KEY=your-production-openai-key

# ==============================================================================
# BUILD SETTINGS (PRODUCTION)
# ==============================================================================
VITE_SOURCE_MAPS=false
VITE_ANALYZE_BUNDLE=false
VITE_BUILD_PATH=dist
VITE_BASE_PATH=/

# ==============================================================================
# PERFORMANCE OPTIMIZATION
# ==============================================================================
# Enable production performance features
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ==============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# ==============================================================================
# Vercel
# VERCEL_URL will be automatically set by Vercel
# VERCEL_ENV will be automatically set by Vercel

# Netlify
# URL will be automatically set by Netlify
# CONTEXT will be automatically set by Netlify

# Railway
# RAILWAY_STATIC_URL will be automatically set by Railway

# Render
# RENDER_EXTERNAL_URL will be automatically set by Render