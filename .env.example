# ==============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your actual values
# For different environments, use .env.local, .env.development, .env.production

# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================
# Your Supabase project URL (required)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (required)
VITE_SUPABASE_PUBLISHABLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-key-here

# Your Supabase project ID (required)
VITE_SUPABASE_PROJECT_ID=your-project-id

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
# Environment mode (development, production, staging)
NODE_ENV=development

# Application base URL (optional)
VITE_APP_URL=http://localhost:8080

# API timeout in milliseconds (optional)
VITE_API_TIMEOUT=30000

# ==============================================================================
# AI/LOVABLE INTEGRATION
# ==============================================================================
# Lovable API key for AI features (optional)
VITE_LOVABLE_API_KEY=your-lovable-api-key

# OpenAI API key for additional AI features (optional)
VITE_OPENAI_API_KEY=your-openai-api-key

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable specific features
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_WEB_BUILDER=true
VITE_ENABLE_DESIGN_STUDIO=true
VITE_ENABLE_CODE_EDITOR=true
VITE_ENABLE_ANALYTICS=false

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Enable development tools and debugging
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_ERROR_BOUNDARY=true

# Development server port (optional)
VITE_PORT=8080

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# CORS origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:8080,https://your-domain.com

# Content Security Policy settings (optional)
VITE_CSP_ENABLED=false

# ==============================================================================
# THIRD-PARTY INTEGRATIONS
# ==============================================================================
# Google Analytics tracking ID (optional)
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=your-sentry-dsn

# GitHub integration (optional)
VITE_GITHUB_CLIENT_ID=your-github-client-id

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false

# ==============================================================================
# DEPLOYMENT SETTINGS
# ==============================================================================
# Build output directory
VITE_BUILD_PATH=dist

# Base path for deployment (useful for subdirectory deployments)
VITE_BASE_PATH=/

# Enable source maps in production
VITE_SOURCE_MAPS=false